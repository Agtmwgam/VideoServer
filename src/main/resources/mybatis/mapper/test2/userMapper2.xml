<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tw.dao2.UserDao2">

	<!-- 新建一个用户 -->
	<insert id="creatUser" parameterType="com.tw.entity.User">
		insert into user_info2
		(id,giftNo,gift,name,sex,address,birth)
		values(#{id},#{giftNo},#{gift},#{name},#{sex},#{address},#{birth})
	</insert>

	<!-- 删除用户 -->
	<delete id="delUser" parameterType="com.tw.entity.User">
		delete from user_info2 where
		ID=#{id}
	</delete>

	<!-- 更新客户信息 -->
	<update id="modifyUser" parameterType="com.tw.entity.User">
		update user_info2
		<set>
			<if test="name != null and name !=''">
				name = #{name},
			</if>
			<if test="sex != null and sex != ''">
				sex = #{sex},
			</if>
			<if test="address != null and address !=''">
				address = #{address},
			</if>
			<if test="birth != null and birth !=''">
				birth = #{birth},
			</if>
			<if test="gift != null and gift!=''">
				gift = #{gift}
			</if>
		</set>
		<where>
			<if test="id !=null and id!=''">
				ID = #{id}
			</if>
			<if test="giftNo!=null and giftNo!=''">
				and giftNo=#{giftNo,jdbcType=VARCHAR}
			</if>
		</where>
	</update>

	<!-- 根据传入条件查询客户总数 -->
	<select id="countUser" parameterType="com.tw.entity.User"
		resultType="java.lang.Integer">
		select count(*) from user_info2
		<where>
			<if test="id !=null and id!=''">
				id =#{id}
			</if>
			<if test="name != null and name !=''">
				and name =#{name}
			</if>
			<if test="sex != null and sex != ''">
				and sex =#{sex}
			</if>
			<if test="address != null and address !=''">
				and address =#{address}
			</if>
			<if test="birth != null and birth !=''">
				and birth =#{birth}
			</if>
			<if test="giftNo!=null and giftNo!=''">
				and giftNo=#{giftNo,jdbcType=VARCHAR}
			</if>
			<if test="gift != null and gift!=''">
				and gift = #{gift}
			</if>
		</where>
	</select>

	<!-- 查找所有用户信息 -->
	<select id="queryAllUser" resultType="com.tw.entity.User">
		select * from user_info2
	</select>

	<!-- 根据传入的信息查找对应的用户信息 -->
	<select id="queryUsers" parameterType="com.tw.entity.User"
		resultType="com.tw.entity.User">
		select * from user_info2
		<where>
			<if test="id !=null and id!=''">
				id =#{id}
			</if>
			<if test="giftNo!=null and giftNo!=''">
				and giftNo=#{giftNo,jdbcType=VARCHAR}
			</if>
			<if test="name !=null">
				and name =#{name}
			</if>
			<if test="sex !=null">
				and sex =#{sex}
			</if>
			<if test="address !=null">
				and address =#{address}
			</if>
			<if test="birth !=null">
				and birth =#{birth}
			</if>
		</where>
	</select>

	<!-- 根据用户ID查找对应的用户信息 -->
	<select id="queryUserById" parameterType="java.lang.String"
		resultType="com.tw.entity.User">
		select * from user_info2
		<where>
			<if test="id!=null and id!=''">
				id=#{id,jdbcType=VARCHAR}
			</if>
			<if test="giftNo!=null and giftNo!=''">
				and giftNo=#{giftNo,jdbcType=VARCHAR}
			</if>
		</where>
	</select>

</mapper>